    rectOverLime = false;
    rectOverYellow = false;
    rectOverLightOrange = false;
    rectOverOrange = false;
    rectOverBrown = false;
    rectOverWhite=false;
    rectOverBlack=false;
    rectOverSmaller = false;
    rectOverBigger = true;
    rectOverCircle= false;
    rectOverSquare= false;
    rectOverSave = false;
    rectOverStartOver = false;
    rectOverCapture = false;
  } else if (overRectCircle(x0, y500, x100, swatchWidth)) {
    rectOverRed = false;
