void setup() {
  size(1200, 700);
  background(255);
  //cursorImg = loadImage("icon_6075.png");
  imageMode(CORNER);
  camRestart();
  
}

void draw() {
   drawMenu();
  println(frameRate);
  if (canDraw == false) {
    capture();
  } else {
    drawPicture();
  }
}

//take the picture when user hits the up button
void capture() {
  if (cam.available() == true) {
    cam.read();
  }
  image(cam, 201, 0);
  update(mouseX,mouseY);
  if (rectOverCapture == true && mousePressed == true || keyCode == UP) {
    cam.stop();
    imageCaptured = get(201,0,1000,height);
    canDraw = true;
  }
}

//Drawing tools
void drawPicture() {
  if (roundBrush == true) {
  drawCircle();
 } else if (roundBrush == false){
   drawRectangle();
 }
  //change cursor to indicate draw
  if (mouseX > 200) {
    cursor(CROSS);
  } else {
    cursor(ARROW);
  }

  if (key == 'l' || key == 'L') {
    reset();
  }
  if (key== '1') {

    filter(POSTERIZE, 5);
  }
  if (key == '2') {
    
    filter(GRAY);
  }
  if (key == '3') {
    filter(INVERT);
  }
  if (key == '4') {
    filter(THRESHOLD);
  }
  if (key == '5') {
    filter(BLUR, 3);
  }
  if (diam <=198) {
    if (keyCode == RIGHT) {
      if (keyPressed) {
        diam = diam+1;
      }
    }
  }
  if (diam >= 2) {

    if (keyCode == LEFT) {
      if (keyPressed) {
        diam = diam-1;
      }
    }
  }
  if (key == 's' || key == 'S' ) {
    if (keyPressed) {
      PImage savedImageKey = get(201,0,1000,height); 
      savedImageKey.save("image" + n + ".jpg");
      n=n+1;
    }
  }
  
  if (key == 'u' || key == 'U') {
    if (keyPressed) {
    image(imageCaptured, 201,0);
    }
  }
  
  if (key == 'w' || key == 'W') {
    if (keyPressed){
      noStroke();
      fill(white);
      rect(201,0,1000,height);
    }
  }
  
  if (key == 'b' || key == 'B') {
    if (keyPressed){
      noStroke();
      fill(black);
      rect(201,0,1000,height);
    }
  }
}






//resets to video when user wants to restart
void reset() {
  canDraw = false;
  camRestart();
  capture();
}

//USed at start and in reset function to reinitialize camera
void camRestart() {

  if (cameras.length == 0) {
    println("There are no cameras available for capture.");
    exit();
  } else {
    println("Available cameras:");
    for (int i = 0; i < cameras.length; i++) {
      println(cameras[i]);
    }
    cam = new Capture(this, cameras[0]);
    cam.start();
  }
}

void drawCircle() {
   if (mousePressed == true && mouseX > 200) {
    stroke(value);
    strokeWeight(diam);
    fill(value);
    line(mouseX, mouseY, pmouseX, pmouseY);
  } 
}

void drawRectangle() {
  if (mousePressed == true && mouseX > 200) {
    noStroke();
    fill(value);
    rectMode(CENTER);
    rect(mouseX, mouseY, diam, diam);
  } 
}

