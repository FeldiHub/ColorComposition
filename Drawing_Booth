//button action
void mouseReleased() {
  update(mouseX, mouseY);
  if (rectOverRed == true) {
    value = color(red);
  } else if (rectOverDarkPink == true) {
    value = color(darkPink);
  } else if (rectOverPink == true) {
    value = color(pink);
  } else if (rectOverLightPurple == true) {
    value = color(lightPurple);
  } else if (rectOverPurple == true) {
    value = color(purple);
  } else if (rectOverLightBlue == true) {
    value = color(lightBlue);
  } else if (rectOverBlue == true) {
    value = color(blue);
  } else if (rectOverGreen == true) {
    value = color(green);
  } else if (rectOverLightGreen == true) {
    value = color(lightGreen);
  } else if (rectOverLime == true) {
    value = color(lime);
  } else if (rectOverYellow == true) {
    value = color(yellow);
  } else if (rectOverLightOrange == true) {
    value = color(lightOrange);
  } else if (rectOverOrange == true) {
    value = color(orange);
  } else if (rectOverBrown == true) {
    value = color(brown);
  } else if (rectOverBlack == true) {
    value = color(black);
  } else if (rectOverWhite == true) {
    value = color(white);
  }

  if (rectOverCircle == true) {
    roundBrush = true;
  } else if (rectOverSquare == true) {
    roundBrush = false;
  }


  if (rectOverSave == true) {
    PImage savedImage = get(200, 0, 1000, height);
    savedImage.save("image" + n + ".jpg");
    n=n+1;
  } 

  if (rectOverStartOver == true) {
    reset();
  }

  if (diam <=198) {
    if (rectOverBigger == true) {
      diam = diam +1;
    }
  }
  if (diam >= 2) {
    if (rectOverSmaller == true) {
      diam = diam - 1;
    }
  }
}
